{{#each words}}

{{#if user}}
<div>Hello{{user.name}}</div>
{{/if}}

<div class="word">
  <p style="font-family:courier;">{{this.word}}</p>
  <p style="italic">{{this.respelling}}</p>
</div>

<div class="image">
  <img src="{{this.image_url}}">
</div>

  <br>

<div class="sound">
  <audio controls autoplay>
  <source src="{{this.sound_url}}" type="audio/mpeg">
  Your browser does not support the audio tag.
  </audio>
</div>

{{/each}}
